page {
  height: 100%;
}
.content {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.content .userInfo {
  width: 300rpx;
  height: 350rpx;
  text-align: center;
  color: #fff;
  opacity: 0.7;
  margin-top: 150rpx;
  overflow: hidden;
  border-radius: 50%;
  z-index: 999;
}
.content .userInfo image {
  width: 100%;
  height: 100%;
}
.content ._a {
  position: relative;
  display: inline-block;
  text-align: center;
  color: #fff;
  height: 2em;
  line-height: 2em;
  width: 33%;
  border: 4rpx solid rgba(255, 255, 255, 0.33);
}
.content ._a ._em {
  position: absolute;
  width: 100%;
  height: 100%;
  top: -2rpx;
  left: -2rpx;
  border: 4rpx solid #fff;
  opacity: 0;
}
.content ._a ._em:hover {
  opacity: 0.2;
}
@-webkit-keyframes btnAnimation1 {
0% {
    -webkit-transform: scale(1, 1);
            transform: scale(1, 1);
}
50% {
    -webkit-transform: scale(1.12, 1.4);
            transform: scale(1.12, 1.4);
}
100% {
    -webkit-transform: scale(1, 1);
            transform: scale(1, 1);
}
}
@keyframes btnAnimation1 {
0% {
    -webkit-transform: scale(1, 1);
            transform: scale(1, 1);
}
50% {
    -webkit-transform: scale(1.12, 1.4);
            transform: scale(1.12, 1.4);
}
100% {
    -webkit-transform: scale(1, 1);
            transform: scale(1, 1);
}
}
@-webkit-keyframes btnAnimation2 {
0% {
    -webkit-transform: scale(1, 1);
            transform: scale(1, 1);
}
50% {
    -webkit-transform: scale(1.17, 1.45);
            transform: scale(1.17, 1.45);
}
100% {
    -webkit-transform: scale(1, 1);
            transform: scale(1, 1);
}
}
@keyframes btnAnimation2 {
0% {
    -webkit-transform: scale(1, 1);
            transform: scale(1, 1);
}
50% {
    -webkit-transform: scale(1.17, 1.45);
            transform: scale(1.17, 1.45);
}
100% {
    -webkit-transform: scale(1, 1);
            transform: scale(1, 1);
}
}
.content ._a:hover .em1 {
  -webkit-animation: btnAnimation1 0.5s linear;
          animation: btnAnimation1 0.5s linear;
}
.content ._a:hover .em2 {
  -webkit-animation: btnAnimation2 0.75s linear;
          animation: btnAnimation2 0.75s linear;
}

